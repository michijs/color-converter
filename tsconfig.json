{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2020"
        ],
        "outDir": "./dist",
        "moduleResolution": "node",
        "module": "es2020",
        "target": "es2019",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}