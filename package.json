{
  "name": "@michijs/htmltype",
  "author": "Lucas M. Segurado",
  "license": "MIT",
  "version": "0.1.13",
  "baseUrl": "./src",
  "repository": {
    "type": "git",
    "url": "https://github.com/michijs/htmltype.git"
  },
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "description": "Strict TypeScript types for HTML and SVG attributes based on MDN data",
  "scripts": {
    "lint-generated": "rome check --apply-suggested ./src/generated && rome format --write ./src/generated",
    "start": "ts-node --project tasks.tsconfig.json ./tasks/generateTypes.ts",
    "dist": "tsc",
    "test-tsc": "tsc",
    "link": "npm run dist && npm link --force && tsc -w"
  },
  "keywords": [
    "html",
    "typescript"
  ],
  "devDependencies": {
    "@types/node": "18.14.2",
    "@vscode/web-custom-data": "0.4.5",
    "lint-staged": "13.1.2",
    "rome": "11.0.0",
    "simple-git-hooks": "2.8.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "svg": "github:lishu/vscode-svg2"
  },
  "dependencies": {
    "csstype": "3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "rome check --apply-suggested",
      "rome format --write"
    ]
  }
}
